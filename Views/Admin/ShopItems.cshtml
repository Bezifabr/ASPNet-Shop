@page
@model Shop.Views.Admin.ShopItemsModel
@{
    ViewBag.Title = "Panel Administratora";
}


<h1>@ViewBag.Title</h1>

<!DOCTYPE html>

<html>
<head>

    <link rel="stylesheet" href="~/css/Shop.css" />
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>


    <section>

        <a href="/AdminPanel"><button class="btn btn-outline-dark">Powrót do panelu admina</button></a>
        <a href="/AdminPanel/ShopItemsManager/Add"><button class="btn btn-outline-dark">Dodaj przedmiot</button></a><br />

        <div class="ShopItemsList">
            @foreach (var item in ViewBag.shopItems)
            {
                <div class="ShopItem">
                    <a href="/AdminPanel/Details/@item.id">
                        <img src="@item.pictureUrl" />
                    </a>
                    @item.name
                    @item.price zł
                </div>
            }
        </div>
    </section>


</body>
</html>